<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.ele.download.mapper.TaskMapper">

    <resultMap id="task" type="me.ele.download.pojo.Task">
        <id property="id" column="id"/>
        <result property="user" column="user"/>
        <result property="status" column="status"/>
        <result property="type" column="type"/>
        <result property="condition" column="condition"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <sql id="VoColumns">
        id, `user`, status, type, `condition`, created_at, updated_at
    </sql>

    <sql id="QueryWhere">
        <where>

        </where>
    </sql>

    <!--查询全部任务-->
    <select id="findAll" resultMap="task">
        SELECT user,status,created_at FROM tb_task
        ORDER BY updated_at DESC
    </select>

    <select id="findTaskByVo" resultMap="task" parameterType="me.ele.download.vo.TaskSearch">
        SELECT user,status,created_at FROM tb_task
        where status = #{status}
        ORDER BY updated_at DESC
    </select>

    <select id="queryTaskById" resultMap="task" parameterType="java.lang.Long">
        SELECT
        <include refid="VoColumns"/>
        FROM tb_task
        <where>
            <if test="taskId != null">
                AND id = #{taskId}
            </if>
        </where>
    </select>


</mapper>