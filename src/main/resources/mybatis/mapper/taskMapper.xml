<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.ele.download.mapper.TaskMapper">

    <resultMap id="task" type="me.ele.download.pojo.Task">
        <id property="id" column="id"/>
        <result property="user" column="user"/>
        <result property="status" column="status"/>
        <result property="type" column="type"/>
        <result property="condition" column="condition"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="url" column="url"/>
    </resultMap>

    <sql id="Task_Column_List">
        id,`user`,status,`type`,`condition`,created_at,updated_at,url
    </sql>

    <insert id="addTask" parameterType="me.ele.download.pojo.Task">
        insert into tb_task (id,`user`,status,`type`,`condition`,created_at,updated_at)values (#{id},#{user},#{status},#{type},#{condition},#{createdAt},#{updatedAt})
    </insert>

    <!--查询全部任务-->
    <select id="findAll" resultMap="task">
        SELECT user,status,created_at,url FROM tb_task
        ORDER BY updated_at DESC
    </select>

    <select id="findTaskByVo" resultMap="task" parameterType="me.ele.download.vo.TaskSearch">
        SELECT user,status,created_at,url FROM tb_task
        where status = #{status}
        ORDER BY updated_at DESC
    </select>

    <select id="queryTaskByParam" resultMap="task" parameterType="me.ele.download.vo.TaskQueryParam">
        SELECT <include refid="Task_Column_List"/>
        from tb_task
        where created_at
        between #{createdAtStart} and #{createdAtEnd}
    </select>

    <update id="changeTaskStatus">
        UPDATE tb_task
        SET status = #{status}
        WHERE id = #{taskId}
    </update>


    <update id="changeTaskUrl">
        UPDATE tb_task
        SET url = #{url}
        WHERE id = #{taskId}
    </update>



</mapper>